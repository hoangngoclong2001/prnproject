@using System.Collections
@model Client_API_EF.Models.Product

@{
    ViewData["Title"] = "Product Detail";
    var categories = ViewData["categories"] as Category;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-left">
    <ul>
        <a href="/admin/dashboard">
        <li>Dashboard</li></a>
        <a href="/admin/orders">
        <li>Orders</li></a>
        <a href="/admin/products">
        <li>Products</li></a>
        <a href="/admin/customers">
        <li>Customers</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path-admin">PRODUCT DETAIL</b></div>
    <div class="content-main">
        <form id="content-main-product">
            <div class="content-main-1">
                <label>Product name (*):</label>
                @Html.DisplayFor(model => model.ProductName)
                <br />
                <label>Unit price:</label>
                @Html.DisplayFor(model => model.UnitPrice)
                <br />
                <label>Quantity per unit:</label>
                @Html.DisplayFor(model => model.QuantityPerUnit)
                <br />
                <label>Units in stock (*):</label>
                @Html.DisplayFor(model => model.UnitsInStock)
                <div class="cart-item-img">
                    <div class="cart-item-img" style="width: 500% !important">
@*                        <img src="~/img/@Model.PictureFileName" />
*@                    </div>
                </div>
            </div>
            <div class="content-main-1">
                <label>Category (*):</label>
                @Html.DisplayFor(model => model.Category.CategoryName)
                <br />
                <label>Reorder level:</label>
                @Html.DisplayFor(model => model.ReorderLevel)
                <br />
                <label>Units on order:</label>
                @Html.DisplayFor(model => model.UnitsOnOrder, new {disabled= "disabled" })
                <br />
                <label>Discontinued:</label>
                @Html.DisplayFor(model => model.Discontinued)
                <br />
            </div>
        </form>
    </div>
</div>
