@model Client_API_EF.Models.Product
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-detail">
    <div id="content-title">
        <a href="index.html">Home</a> >
        <a href="category1.html">Category 1</a> >
        Model: SP1
    </div>
    <div id="product">
        <div id="product-name">
            <h2>Product 1</h2>
            <div id="product-detail">
                <div id="product-detail-left">
                    <div id="product-img">
                        @foreach (var picture in Model.Pictures) {
                            if (!(bool)picture.PictureType) {
                                <img src="~/img/@picture.PictureFileName" />
                            }
                        }
                    </div>
                    <div id="product-img-items">
                        @foreach (var picture in Model.Pictures)
                        {
                            if ((bool)picture.PictureType)
                            {
                                <div><a href="#"><img src="~/img/@picture.PictureFileName" /></a></div>
                            }
                        }
                    </div>
                </div>
                <div id="product-detail-right">
                    <div id="product-detail-right-content">
                        <div id="product-price">$@Model.UnitPrice</div>
                        @if (Model.UnitsInStock > 0)
                        {
                            <div id="product-status">In stock</div>
                        }
                        else
                        {
                            <div id="product-status">Out of stock</div>
                        }
                        <div id="product-detail-buttons">
                            <div id="product-detail-button">
                                <form asp-action="cart" method="post">
                                    <input type="hidden" name="name" value="@Model.ProductName" />
                                    <button type="submit" name="action" value="buynow">BUY NOW</button>
                                </form>
                                <form asp-action="cart" method="post">
                                    <input type="hidden" name="name" value="@Model.ProductName" />
                                    <button type="submit" name="action" value="addtocart" style="background-color: #fff; color:red;border: 1px solid gray;">ADD TO CART</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
